    <!-- 20210516 최웅기 CDC 테이블명 변경  TBGCBER01	:: TBUBDJ001
    <statement name="retvLstGcbSpsrAthMsg" qPath="[GCB_MODEL_업무공통] 2.시스템명세모델::05.엔터티컴포넌트::02.통합코드관리::GCB오류메시지코드Ebi::GCB오류메시지코드Dao::GCB책임자승인메시지목록조회">
		<![CDATA[
			SELECT /*+ 김민교::/gcb/ingCdMg/gcbErrMsgCdEbi/TBGCBER01/retvLstGcbSpsrAthMsg */ 
			       A.오류메시지코드
			     , A.메시지채널구분코드
			     , A.오류메시지사용여부
			     , A.등록어플리케이션코드
			     , A.등록년월일
			     , A.오류메시지출력내용
			     , A.언어구분코드
			     , A.적용시작년월일
			     , A.적용종료년월일
			     , A.책임자사유등급구분코드
			     , A.책임자승인구분코드
			  FROM INSTC.TBGCBER01 A,
			       (SELECT 언어구분코드
			             , 오류메시지코드
			             , 메시지채널구분코드
			             , MAX(적용시작년월일) B01
			          FROM INSTC.TBGCBER01
			         WHERE 언어구분코드 = ${언어구분코드}
			           AND 메시지채널구분코드 = '01'
			           AND (오류메시지코드 like 'A88%' OR 오류메시지코드 like 'B88%')
			           AND 적용시작년월일 <= ${적용시작년월일}
			           AND ( ( 'CRD' = ${검색조건_V3}
			                  AND (오류메시지코드 like 'A88%' OR 오류메시지코드 like 'B88%')   )
			              OR ( 'MSG' = ${검색조건_V3}
			                  AND 오류메시지코드 >= ${오류메시지코드시작_V8}
			                  AND 오류메시지코드 <= ${오류메시지코드종료_V8} )
			              OR ( ( 'WRD' = ${검색조건_V3}
			                    AND 'AND' = ${논리구분코드_V3}
			                    AND 오류메시지출력내용 LIKE '%'||${메시지주요단어1_V20}||'%'
			                    AND 오류메시지출력내용 LIKE '%'||${메시지주요단어2_V20}||'%' )
			                  OR ( 'WRD' = ${검색조건_V3}
			                      AND 'OR' = ${논리구분코드_V3}
			                      AND ( 오류메시지출력내용 LIKE '%'||${메시지주요단어1_V20}||'%'
			                           OR 오류메시지출력내용 LIKE '%'||${메시지주요단어2_V20}||'%' ) ) 
			                  ) 
			                )
			         GROUP BY 언어구분코드
			                , 오류메시지코드
			                , 메시지채널구분코드 ) B
			 WHERE A.언어구분코드 = B.언어구분코드
			   AND A.메시지채널구분코드 = B.메시지채널구분코드
			   AND A.오류메시지코드 = B.오류메시지코드
			   AND A.적용시작년월일 = B.B01
		]]>
    </statement>
    -->
