      		<default-table-name>TDO_STMT_INFO</default-table-name>
      		<columns>
          		<type>BUZ_CD</type>
          		<statement-name>STMT_ID</statement-name>
          		<query>STMT</query>
          		<metadata>METADATA</metadata>
          		<fetchsize>FETCHSIZE</fetchsize>
          		<postfix>POSTFIX</postfix>
      		</columns>
    	</dynamic-query>
    	
