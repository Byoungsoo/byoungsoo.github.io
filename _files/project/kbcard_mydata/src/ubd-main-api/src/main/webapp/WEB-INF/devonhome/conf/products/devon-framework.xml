    <message>
        <spec name="default">
            <resource-type>devonframework.service.message.LMessageDB</resource-type>
            <resource-name>SGRV_MESSAGE</resource-name>
            <dbspec>default</dbspec>
            <preload>false</preload>
            <capital-small-letter>true</capital-small-letter>
