            <format>yyyyMMdd</format>
            <holiday-path>#home/../devonhome/conf/products/holiday.conf</holiday-path>
            <holiday-encoding-type>MS949</holiday-encoding-type>
        </date>
        
        <!-- ================================================================================================
        * 설    명 :
        * 관련소스 : devon.core.util.crypto.LEncryptManager.getAlgorithm( String spec )
        ================================================================================================== -->
        <cryptos>
            <crypto name="AES">
                <key>
                    <!-- key 파일  -->
                    <filename>#home/../devonhome/security/keys.xml</filename>
                    <!-- key 파일에 정의된 key name -->
                    <keyname>AESX001</keyname>
                </key>
                <!-- 암호화 알고리즘 클래스  -->
                <algorithm>devon.core.util.crypto.LAlgorithmAES</algorithm>
            </crypto>
            
            <crypto name="3DES">
                <key>
                    <filename>#home/../devonhome/security/keys.xml</filename>
                    <keyname>3DES001</keyname>
                </key>
                <algorithm>devon.core.util.crypto.LAlgorithmTripleDES</algorithm>
           </crypto>
    
           <crypto name="ARIA">
                <key>
                    <filename>#home/../devonhome/security/keys.xml</filename>
                    <keyname>ARIA001</keyname>
                </key>
                <algorithm>devon.core.util.crypto.LAlgorithmARIA</algorithm>
           </crypto>
           <crypto name="SEED">
                <key>
                    <filename>#home/../devonhome/security/keys.xml</filename>
                    <keyname>SEED001</keyname>
                </key>
                <algorithm>devon.core.util.crypto.LAlgorithmSEED</algorithm>
            </crypto>
            
        </cryptos>
        
        <!-- ================================================================================================
        * 설    명 : Context Set 권한에 대한 설정
        * 관련소스 : devon.core.util.context.LContextManager
        ================================================================================================== -->
        <context>
            <context-used>true</context-used>
            <context-authority-checked>true</context-authority-checked>
            <context-settable-classes>devon*</context-settable-classes>
        </context>
        
        <!-- ================================================================================================
        * 설    명 : TraceLog 설정
        * 관련소스 : devon.core.log.trace.LTraceConfigManager
                     devon.core.log.trace.LTraceLayer
        ================================================================================================== -->
        <trace>
            <!-- ALL : 0, FORCED : 1, NOTHING : 2 -->
            <mode>0</mode>
            <layers>
                <layer name="chi">true</layer>
                <layer name="biz">true</layer>
                <layer name="per">true</layer>
            </layers>
            <data-type>
                <input>true</input>
                <output>true</output>
                <query>true</query>
            </data-type>
            <checker>
                <used>true</used>
                <class>devon.batch.log.trace.TraceChecker</class>
            </checker>
            <error>
                <!-- <exceptions>java.lang.Throwable</exceptions> -->
                <exceptions>NONE</exceptions> 
                <checker>
                    <!-- <used>true</used> -->
                    <used>false</used>
                    <class>devonenterprise.core.log.trace.TraceErrorChecker</class>
                </checker>
            </error>
        </trace>
        
