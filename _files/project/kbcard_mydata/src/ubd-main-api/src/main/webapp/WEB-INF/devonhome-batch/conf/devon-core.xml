        <!-- LLog Component Setting -->
        <!-- Logger -->
        <log>
            <base-target>#home\..\devonhome-batch\logs</base-target>
            <file-date>24</file-date>
            <character-set>MS949</character-set> <!-- ex) EUC-KR, UTF-8, IBM-1364, MS949 -->
